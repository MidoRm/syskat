<?xml version="1.0" encoding="iso-8859-1"?><extension 	type="module" 	version="2.5" 	client="site"	method="upgrade">		<name>AdXML Gallery flash Template Slide </name>	<author>Smallirons.net</author>	<creationDate>April 2013, 22</creationDate>	<copyright>All rights reserved by Smallirons 2013</copyright>	<license>license GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>	<authorEmail>smallirons@gmail.com</authorEmail>	<authorUrl>www.smallirons.net</authorUrl>	<version>1.3</version>		<description>		<![CDATA[		<h3 style="color:#008000">The Advanced XML Gallery Slide module</h3>The AdXML Gallery Flash<br><br><b style="color:#FF6600">Features:</b><ol><li>Allow arrange images from folders image (separated by |) </li></ol><br><br><b style="color:#FF6600">Requirements:</b><br> <ol><li>Joomla! 3.0.x site.</li></ol>		]]>	</description>	    <!-- Listing of all files that should be installed for the module to function -->        <files>        <!-- The "module" attribute signifies that this is the main controller file -->		<filename module="mod_adxmlgallery">mod_adxmlgallery.php</filename>		<filename>index.html</filename>		<filename>noimage_functions.php</filename>		<filename>slideShow_v2.swf</filename>		<filename>slideShowV2Settings.xml</filename>		<filename>playlist.xml</filename>		<filename>slideShowStyles.css</filename>		<filename>AC_RunActiveContent.js</filename>		<folder>images/</folder>				</files><config>		<fields 			name="params" 			addfieldpath="/modules/mod_adxmlgallery/elements">			<fieldset 				name="basic">				<field 					name="bannerWidth" 					type="text" 					default="100%"					label="Gallery object width (px or %)" 					description="Gallery object width in px or % " 				/>				<field 					name="bannerHeight" 					type="text" 					default="480"					label="Gallery object height (px)" 					description="Montage object height (px) only a number must be indicated " 				/>												<field 					name="imgsrc" 					type="textarea"					cols="60"					rows="10"					default="1.jpg|2.jpg|3.jpg|4.jpg|5.jpg|6.jpg" 					label="Image files" 					description="List of images sources, separated by |" 				/>				<field 					name="imgdir" 					type="textarea"					cols="60"					rows="1"					default="modules/mod_adxmlgallery/images/big" 					label="Image Directory" 					description="Image Directory" 				/>				<field 					name="thudir" 					type="textarea"					cols="60"					rows="1"					default="modules/mod_adxmlgallery/images/thumb" 					label="Thumbnails Directory" 					description="Thumbnails directory" 				/>				<field 					name="show_desc" 					type="radio" 					default="yes"					label="Show Description" 					description="Show/Hide Description." >							<option value="yes">yes</option>							<option value="no">no</option>											</field>				<field 					name="imgdsc" 					type="textarea"					cols="60"					rows="10"					default="Description 1|Description 2|Description 3|Description 4|Description 5|Description 6" 					label="Image description" 					description="List of images description, separated by |" 				/>			</fieldset>				<fieldset name="Optnav" label="Navigation Options">				<field 					name="dockHeight" 					type="text" 					default="110"					label="dock dimensions height" 					description="dock dimension height (px)" >				</field>				<field 					name="thumbWidth" 					type="text" 					default="50"					label="thumb width" 					description="thumbnail width (px)" >				</field>				<field 					name="thumbHeight" 					type="text" 					default="50"					label="thumb height" 					description="thumbnail height (px)" >				</field>				<field 					name="thumbdistance" 					type="text" 					default="12"					label="thumb distance" 					description="thumbnail distance (px)" >				</field>				<field 					name="thumbborder" 					type="text" 					default="1"					label="thumb border" 					description="thumbnail border (px)" >				</field>				<field 					name="thumbborcolor" 					type="text" 					default="FFFFFF"					label="thumb border color" 					description="thumbnail border color" >				</field>				<field 					name="dockscalefactor" 					type="text" 					default="1.4"					label="dock scale factor" 					description="dock scale factor" >				</field>				<field 					name="borderbigimage" 					type="text" 					default="4"					label="border big image" 					description="border big image (px)" >				</field>								<field 					name="show_arrow" 					type="radio" 					default="yes" 					label="Show arrow" 					description="Show/Hide arrow" > 							<option value="yes">yes</option>							<option value="no">no</option>				</field>				<field 					name="arrowcolor" 					type="text" 					default="FFFFFF"					label="navigation arrow color" 					description="navigation arrow color" >				</field>				<field 					name="show_fullscr" 					type="radio" 					default="yes" 					label="Show fullscreen" 					description="Show/Hide fullscreen button" > 							<option value="yes">yes</option>							<option value="no">no</option>				</field>				<field 					name="autoplay" 					type="text" 					default="6" 					label="Auto Play time" 					description="auto play time" >				</field>								<field 					name="loop" 					type="radio" 					default="yes" 					label="Loop images" 					description="Loop gallery images" > 							<option value="yes">yes</option>							<option value="no">no</option>				</field>				<field 					name="bgcolor" 					type="text" 					default="0x2C2C2C" 					label="Hex background color " 					description="Hex background color, assumed default value if not indicated" >				</field>				<field 					name="dockbgcolor" 					type="text" 					default="0x111111" 					label="Hex dock background color " 					description="Hex dock background color, assumed default value if not indicated" >				</field>				<field 					name="borderbigimagecolor" 					type="text" 					default="0xFFFFFF" 					label="Hex Big Image border color " 					description="Hex Big Image border color, assumed default value if not indicated" >				</field>							</fieldset>			<fieldset name="advanced">				<field 					name="moduleclass_sfx" 					type="text" 					default="adxm" 					label="Module Class Suffix"					description="PARAMMODULECLASSSUFFIX"/>			</fieldset>		        </fields></config>			<!-- AIm Parameters --></extension>